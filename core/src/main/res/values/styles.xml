<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Text" parent="TextAppearance.AppCompat">
        <!--
        Only use this to set font.
        All other attributes will overwrite default values for EVERY view
        -->
    </style>

    <style name="NormalText" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="LightText" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/medium_grey</item>
    </style>

    <style name="DarkText" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@drawable/primary_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">224dp</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/background_selectable</item>
        <item name="android:padding">16dp</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="srcCompat">@drawable/ic_arrow_back_24dp</item>
    </style>

    <style name="SectionLabel" parent="Text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="SectionValue" parent="Text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
